<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/word_text_view" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            android:textStyle="bold" android:fontFamily="@font/cairo" android:textColor="@color/black"
            tools:text="Erkek kardeş"/>
    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/play_sound_letter_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:lottie_loop="false"
            app:lottie_fileName="play.json"
            app:lottie_autoPlay="false"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/arabic_word_text_view"
            app:layout_constraintStart_toStartOf="@+id/word_text_view"
            app:layout_constraintTop_toBottomOf="@+id/word_text_view" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" tools:text="الاخ الشقيق" android:fontFamily="@font/cairo"
            android:textSize="12sp" android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>