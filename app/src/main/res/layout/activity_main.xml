<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity" tools:layout_editor_absoluteY="25dp">

    <TextView
            android:id="@+id/username_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المستخدم"
            android:textSize="24sp"
            android:textStyle="bold"
            app:fontFamily="@font/cairo"
            tools:text="احمد زكريا"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"/>

    <TextView
            android:id="@+id/userscore_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="النقاط المملوكة: 125 "
            android:textSize="24sp"
            app:fontFamily="@font/cairo"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="@+id/textView" app:layout_constraintStart_toStartOf="@+id/textView"/>

    <TextView
            android:text="تطبيق تعلم اللغة التركية الاقوى"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="18sp"
            app:fontFamily="@font/cairo"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/username_textview"
            app:layout_constraintEnd_toEndOf="@+id/username_textview"
            app:layout_constraintStart_toStartOf="@+id/username_textview"/>
    <TextView
            android:text="مرحبا"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="18sp"
            app:fontFamily="@font/cairo"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/start_icon"
            android:id="@+id/start_btn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/userscore_textview"/>

</android.support.constraint.ConstraintLayout>