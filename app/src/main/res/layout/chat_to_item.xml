<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:padding="10dp">

    <TextView
            android:text="Merhaba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:background="@drawable/rounded_chat_to_item"
            android:id="@+id/chat_text_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/cairo"
            android:padding="6dp"
            android:textColor="@color/deepBlue"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    <TextView
            android:text="مرحبا"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/gray"
            android:id="@+id/chat_text_view_arabic"
            app:layout_constraintStart_toStartOf="@+id/chat_text_view"
            app:layout_constraintEnd_toEndOf="@+id/chat_text_view"
            android:fontFamily="@font/cairo"
            android:padding="10dp"
            android:textColor="@color/deepBlue"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/chat_text_view"
            android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>